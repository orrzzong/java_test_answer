public class Quiz_0317_6 {
	public static void main(String[] args) {
	
		for (int i=1; i<10; i=i+1) {
			System.out.println("7 X " + i + " = " + (i*7));
		}
		System.out.println("-----------------------");
		
		for (int i=1; i<10; i=i+1) {
			System.out.println("8 X " + i + " = " + (i*8));
		}
		
		System.out.println("-----------------------");
		
		for (int i=1; i<10; i=i+1) {
			System.out.println("9 X " + i + " = " + (i*9));
		}
	}
}
